{
  "tools": [
    {
      "name": "calendar.create_event",
      "description": "Creates a Google Calendar event with support for guests, time zones, and Google Meet integration. This tool validates event data, converts 12-hour time format to ISO datetime, manages guest permissions, and generates meet links when requested. Used for scheduling meetings and events with multiple participants.",
      "input_schema": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Event title/subject"
          },
          "description": {
            "type": "string",
            "description": "Event description or agenda"
          },
          "date": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
            "description": "Event date in YYYY-MM-DD format"
          },
          "startHour": {
            "type": "string",
            "enum": ["01", "02", "03", "04", "05", "06", "07", "08", "09", "10", "11", "12"],
            "description": "Start hour in 12-hour format"
          },
          "startMinute": {
            "type": "string",
            "enum": ["00", "15", "30", "45"],
            "description": "Start minute"
          },
          "startAmPm": {
            "type": "string",
            "enum": ["AM", "PM"],
            "description": "Start time AM/PM"
          },
          "endHour": {
            "type": "string",
            "enum": ["01", "02", "03", "04", "05", "06", "07", "08", "09", "10", "11", "12"],
            "description": "End hour in 12-hour format"
          },
          "endMinute": {
            "type": "string",
            "enum": ["00", "15", "30", "45"],
            "description": "End minute"
          },
          "endAmPm": {
            "type": "string",
            "enum": ["AM", "PM"],
            "description": "End time AM/PM"
          },
          "timeZone": {
            "type": "string",
            "default": "Asia/Kolkata",
            "enum": ["Asia/Kolkata", "America/New_York", "Europe/London", "Asia/Tokyo", "Australia/Sydney"],
            "description": "Event timezone"
          },
          "addMeet": {
            "type": "boolean",
            "default": false,
            "description": "Whether to add Google Meet video conferencing"
          },
          "guests": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "format": "email",
                  "description": "Guest email address"
                },
                "permissions": {
                  "type": "string",
                  "enum": ["see_event", "modify_event"],
                  "default": "see_event",
                  "description": "Guest permission level"
                }
              },
              "required": ["email"]
            },
            "description": "Array of event guests"
          }
        },
        "required": ["title", "date", "startHour", "startMinute", "startAmPm", "endHour", "endMinute", "endAmPm"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "description": "Whether the event was created successfully"
          },
          "event": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique event identifier"
              },
              "title": {
                "type": "string",
                "description": "Event title"
              },
              "description": {
                "type": "string",
                "description": "Event description"
              },
              "dateTimeStart": {
                "type": "string",
                "description": "Event start datetime in ISO format"
              },
              "dateTimeEnd": {
                "type": "string",
                "description": "Event end datetime in ISO format"
              },
              "timeZone": {
                "type": "string",
                "description": "Event timezone"
              },
              "googleMeetLink": {
                "type": ["string", "null"],
                "description": "Google Meet link if addMeet was true"
              },
              "guests": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string"
                    },
                    "permissions": {
                      "type": "string"
                    }
                  }
                },
                "description": "Array of event guests"
              }
            },
            "required": ["id", "title", "dateTimeStart", "dateTimeEnd", "timeZone"]
          },
          "error": {
            "type": ["string", "null"],
            "description": "Error message if creation failed"
          }
        },
        "required": ["success"]
      }
    }
  ]
}